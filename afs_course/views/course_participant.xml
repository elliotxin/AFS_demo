<odoo>
    <record id="course_participant_form" model="ir.ui.view">
        <field name="name">course.participant form</field>
        <field name="model">course.participant</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="student_id"/>
                            <field name="absence_rate"/>
                        </group>

                        <group>
                            <field name="price"/>
                            <field name="registration_date"/>
                            <field name="registration_type"/>
                            <field name="synced_on_partner" groups="based.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>